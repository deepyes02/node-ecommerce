<%- include('includes/head') %>
    <link rel="stylesheet" href="/css/add-product.css" />

    </head>

    <body>
        <%- include('includes/navigation')%>
            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for(let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%=product.title%>
                                    </h1>
                                </header>
                                <div class="card_image">
                                    <img src="https://cdn.pixabay.com/photo/2015/11/19/21/10/knowledge-1052010__340.jpg" alt="a normal book" />
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$19.17</h2>
                                    <p class="product__description">A very interesting book</p>
                                </div>
                                <div class="card__actions">
                                    <button class="btn">Add To Cart</button>
                                </div>
                            </article>
                            <% }%>
                    </div>

                    <% } else { %>
                        <h2>No products found</h2>
                        <% } %>
            </main>

            <%- include('includes/tail') %>