extends layouts/main-layout.pug

block content
    main
    if prods.length > 0 
        .grid
            each product in prods
                article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                    div.card__image
                        img(src="https://cdn.pixabay.com/photo/2015/11/19/21/10/knowledge-1052010__340.jpg", alt="a normal book")
                    div.card__content
                        h2.product__price $19.17
                        p.product_description A very interesting book about so many things
                    .card__actions
                        button.btn Add to Cart
    else
        h1 No products available