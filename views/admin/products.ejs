<%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/add-product.css" />

    </head>

    <body>
        <%- include('../includes/navigation')%>
            <main>

                <% if (prods.length > 0) { %>
                    <div>
                        <h2>Admin Products</h2>
                        <h3> Total books available:
                            <%=prods.length%>
                        </h3>
                    </div>
                    <div class="grid">
                        <% for(let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%=product.title%>
                                    </h1>
                                </header>
                                <div class="card_image">
                                    <img src="<%= product.imageUrl %>" alt="a normal book" />
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%=product.price%>
                                    </h2>
                                    <p class="product__description">
                                        <%=product.description%>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-product" class="btn">Edit</a>
                                    <a href="/admin/delete-product" class="btn">Delete</a>
                                </div>
                            </article>
                            <% }%>
                    </div>

                    <% } else { %>
                        <h2>Sorry, No products found</h2>
                        <% } %>
            </main>

            <%- include('../includes/tail') %>